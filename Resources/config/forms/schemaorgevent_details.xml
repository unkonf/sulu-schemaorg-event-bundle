<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd">
    <key>schemaorgevent_details</key>

    <properties>
        <property name="name" type="text_line" mandatory="true">
            <meta>
                <title>schemaorgevent.name</title>
                <info_text lang="en">Name of the event</info_text>
            </meta>
        </property>

        <property name="startDate" type="date" mandatory="true">
            <meta>
                <title>schemaorgevent.startDate</title>
                <info_text lang="en">The date when the event starts.</info_text>
            </meta>
        </property>

        <property name="endDate" type="date" mandatory="true">
            <meta>
                <title>schemaorgevent.endDate</title>
                <info_text lang="en">The date when the ends.</info_text>
            </meta>
        </property>

        <property name="location_name" type="text_line" mandatory="true">
            <meta>
                <title>schemaorgevent.location.name</title>
                <info_text lang="en">The name of the location.</info_text>
            </meta>
        </property>

        <property name="location_street" type="text_line">
            <meta>
                <title>schemaorgevent.location.street</title>
                <info_text lang="en">The location address street.</info_text>
            </meta>
        </property>

        <property name="location_zipCode" type="text_line">
            <meta>
                <title>schemaorgevent.location.zipCode</title>
                <info_text lang="en">The location address zip code.</info_text>
            </meta>
        </property>

        <property name="location_city" type="text_line">
            <meta>
                <title>schemaorgevent.location.city</title>
                <info_text lang="en">The location address city.</info_text>
            </meta>
        </property>

        <property name="location_country" type="text_line">
            <meta>
                <title>schemaorgevent.location.country</title>
                <info_text lang="en">The location address country code.</info_text>
            </meta>
        </property>

        <property name="offer_name" type="text_line" mandatory="true">
            <meta>
                <title>schemaorgevent.offer.name</title>
                <info_text lang="en">The name of the offer.</info_text>
            </meta>
        </property>

        <property name="offer_price" type="number" mandatory="true">
            <meta>
                <title>schemaorgevent.offer.price</title>
                <info_text lang="en">The price of the offer.</info_text>
            </meta>
        </property>

        <property name="offer_currency" type="text_line" mandatory="true">
            <meta>
                <title>schemaorgevent.offer.currency</title>
                <info_text lang="en">The currency of the offer.</info_text>
            </meta>
        </property>

        <property name="offer_currency" type="text_line" mandatory="true">
            <meta>
                <title>schemaorgevent.offer.currency</title>
                <info_text lang="en">The currency of the offer.</info_text>
            </meta>
        </property>

        <property name="offer_validFrom" type="date" mandatory="true">
            <meta>
                <title>schemaorgevent.offer.validFrom</title>
                <info_text lang="en">The date the offer is valid from.</info_text>
            </meta>
        </property>

        <property name="offer_url" type="url" mandatory="true">
            <meta>
                <title>schemaorgevent.offer.url</title>
                <info_text lang="en">The url where to purchase the offer.</info_text>
            </meta>
        </property>
    </properties>
</form>
